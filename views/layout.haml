!!! Strict
%html{html_attrs}
  %head
    %meta{'http-equiv' => 'content-type', :content => 'text/html; charset=utf-8'}
    %title Gowalla Spotfinder
    %link{:rel => 'stylesheet', :type => 'text/css', :href => '/css/green.css', :media => 'screen, projection, tv'}
    %link{:rel => 'stylesheet', :type => 'text/css', :href => '/css/gowalla.css', :media => 'screen, projection, tv'}    
    %script{:type => 'text/javascript', :src => '/js/jquery-1.3.2.min.js'}
    %script{:type => 'text/javascript', :src => '/js/gowalla.js'}
  %body
    #header
      %div{:class => 'inner-container clearfix'}
        %h1#logo
          %a{:class => 'home', :href => '/', :title => 'Gowalla Spotfinder'}
            Spotfinder
            %span.ir
    #container
      %div{:class => 'inner-container'}
        = yield